{# templates/main/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="container mt-5 page-container">
    <h1>Profil de {{ user.firstName }} {{ user.lastName }}</h1>
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="{{ asset('uploads/profiles/' ~ (user.profilePicture ?: 'default-avatar.jpg')) }}" 
                 alt="Photo de profil" 
                 class="img-fluid rounded mb-3" 
                 width="150" 
                 height="150">
        </div>
        <div class="col-md-8">
            <ul class="list-group">
                <li class="list-group-item"><strong>Nom d'utilisateur :</strong> {{ user.userName }}</li>
                <li class="list-group-item"><strong>Email :</strong> {{ user.email }}</li>       
                <li class="list-group-item"><strong>Pr√©nom :</strong> {{ user.firstName }}</li>
                <li class="list-group-item"><strong>Nom :</strong> {{ user.lastName }}</li>
            </ul>
            <a href="{{ path('edit_profile') }}" class="btn btn-primary mt-3">Modifier le profil</a>
        </div>
    </div>
</div>
{% endblock %}